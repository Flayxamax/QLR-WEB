---
import logo from "../assets/logo.svg";

const navItems = [
  {
    title: "Acerca de",
    href: "#about",
    label: "Acerca de",
  },
  {
    title: "Servicios",
    href: "#services",
    label: "Servicios",
  },
  {
    title: "Contacto",
    href: "#contact",
    label: "Contacto",
  },
];

const footerInfo = {
  title: "Qu√≠mica LA-RAN",
  year: new Date().getFullYear(),
};
---

<footer
  class="bg-white [background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#297071_100%)] rounded-lg shadow-sm"
>
  <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <a
        href="#top"
        class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse"
      >
        <img src={logo.src} class="h-15" alt="Quimica LA-RAN Logo" />
        <span
          class="self-center text-xl font-bold whitespace-nowrap text-[#ff5757]"
          >{footerInfo.title}</span
        >
      </a>
      <ul
        class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0"
      >
        {
          navItems.map((item) => (
            <li>
              <a href={item.href} class="hover:underline me-4 md:me-6">
                {item.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <hr
      class="my-6 h-0 border-gray-300 sm:mx-auto border-1 rounded-sm lg:my-8"
    />
    <span class="block text-sm text-gray-500 sm:text-center"
      >{footerInfo.year} - {footerInfo.title}. Todos los derechos reservados.
    </span>
  </div>
</footer>
