---
import image from "../assets/heroinfo-image.webp";
import PhoneIcon from "../assets/icons/phone.astro";

const heroInfo = {
  title: "Especialidades Químicas, Equipos y Servicios para la Industria",
  description:
    "Proveedor de especialidades químicas, reactivos, materiales de laboratorio, filtros, medios filtrantes, equipos de desmineralización, aceites de lubricación, asistencia técnica y servicios de limpieza química industrial.",
};
---

<div
  class="bg-sky-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,265,198,0.8),rgba(255,255,255,0))] flex relative z-20 items-center"
>
  <div
    class="container mx-auto px-6 flex flex-col-reverse sm:flex-row relative py-16 h-full"
  >
    <div class="sm:w-full lg:w-3/5 flex flex-col justify-center relative z-20">
      <span class="w-96 h-2 bg-white mb-12"> </span>
      <h1
        class="font-bebas-neue uppercase text-4xl font-light sm:text-6xl flex flex-col leading-none text-white"
      >
        {heroInfo.title}
      </h1>
      <p
        class="text-xl sm:text-2xl font-light text-pretty text-white mt-4 lg:mr-52"
      >
        {heroInfo.description}
      </p>
      <div class="flex mt-8">
        <a
          href="#contact"
          class="uppercase py-2 px-6 rounded-lg bg-[#ff5757] border-2 border-transparent text-white text-xl font-semibold mr-4 hover:bg-red-700 flex items-center shadow-lg transition-all duration-300 ease-in-out transform hover:scale-105"
        >
          Contáctanos
        </a>
      </div>
    </div>
    <div class="sm:w-1/3 lg:w-2/5 flex items-center justify-center relative">
      <img src={image.src} class="max-w-sm md:max-w-md lg:max-w-lg" />
    </div>
  </div>
</div>
